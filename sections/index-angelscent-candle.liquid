<section class="angelscent-candle" loading="lazy" style="background-image:url('{{  section.settings.image | img_url: 'master' }}')">
  <div class="container">
      <div class="angelscent-candle-text">
          <h2> {{ section.settings.heading }} </h2>
          <p>{{ section.settings.info }}</p>
      </div>
  </div>
</section>
{% schema %}
  {
    "name": "Angelscent Candle",
    "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Angelscent Candles"
        },
        {
          "type": "textarea",
          "id": "info",
          "label": "About"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
    ],
    "presets":[
      {
        "name":"Angelscent Candle",
        "category":"Custom Sections"
      }
    ]
  }
{% endschema %}

