  <section class="about-us shop-about-us" id="welcome-anglescent">
      <div class="container">
          <div class="row">
              <div class="col-md-6">
                  <div class="about-img">
                      <img src="{{ section.settings.image | img_url: 'master' }}" alt="about-img">
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="about-text-col">
                      <h2>{{ section.settings.heading }}</h2>
                      <p>{{ section.settings.info_1 }}</p>
                      <p>{{ section.settings.info_2  }}</p>
                  </div>
              </div>
          </div>
      </div>
  </section>
{% schema %}
  {
    "name": "About Us",
    "settings": 
      [
          {
            "type" : "text",
            "id" : "heading",
              "label": "Heading",
              "default": "Angelscent"
          },
           {
            "type" : "textarea",
            "id" : "info_1",
              "label": "Description"
          },
           {
            "type" : "textarea",
            "id" : "info_2",
              "label": "Description"
          },
           {
            "type" : "image_picker",
            "id" : "image",
              "label": "Image"
          }
      ]
  }
{% endschema %}

